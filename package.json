{
  "name": "chartjs-chart-superbar",
  "version": "0.1.1",
  "description": "Super bar charts for Chart.js with error bars and variable thickness.",
  "main": "dist/superbar.js",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --watch --mode development",
    "commit": "git-cz",
    "lint": "prettier --write '{src,test}/**/*.js'",
    "test": "jest",
    "build-and-commit": "npm run build && git add dist/* && git commit -m 'build: Update dist'",
    "release": "npm run build-and-commit && standard-version"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "check-dependencies": "^1.1.0",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "jest": "^23.6.0",
    "jest-canvas-mock": "^1.1.0",
    "prettier": "^1.13.5",
    "standard-version": "^4.4.0",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "chart.js": "^2.7.3"
  },
  "engines": {
    "node": "8.11.x",
    "npm": "6.1.x"
  },
  "author": "Swayable",
  "contributors": [
    "Saima Parveen <saimaparveen05@gmail.com>",
    "Tanner Welsh <tannerwelsh@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swayable/chartjs-chart-superbar.git"
  },
  "keywords": [
    "chartjs",
    "chart",
    "plot",
    "bar",
    "error-bar"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/swayable/chartjs-chart-superbar/issues"
  },
  "homepage": "https://github.com/swayable/chartjs-chart-superbar#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "directories": {
    "src": "src",
    "dist": "dist",
    "test": "test"
  },
  "jest": {
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "testURL": "http://localhost"
  },
  "eslintConfig": {
    "plugins": [
      "prettier"
    ],
    "extends": [
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "browser": true
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  }
}
